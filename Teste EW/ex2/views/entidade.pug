extends layout 
block content 
    .w3-card-4 
        header.w3-container.w3-teal 
            h1 #{entidade_comunicante} (#{NIPC_entidade_comunicante})
        .w3-container 
            table.w3-table-all 
                tr 
                    th ID do Contrato
                    th Número de Anúncio
                    th Tipo de Procedimento
                    th Objeto do Contrato
                    th Data de Publicação
                    th Data de Celebração do Contrato
                    th Preço Contratual
                    th Prazo de Execução
                    th Fundamentação

                each contrato in contratos
                    tr 
                        td= contrato._id
                        td= contrato.nAnuncio
                        td= contrato.tipoprocedimento
                        td= contrato.objectoContrato
                        td= contrato.dataPublicacao
                        td= contrato.dataCelebracaoContrato
                        td= contrato.precoContratual
                        td= contrato.prazoExecucao
                        td= contrato.fundamentacao

            p Total dos Contratos: #{totalContratos}

            button 
                a(href='/') Voltar à Página Principal

        
        footer.w3-container.w3-teal 
            h5 Generated by Inês Castro::EngWeb2024 in #{d}
